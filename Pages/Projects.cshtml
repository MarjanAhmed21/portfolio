@{
    var imageSetsJson = System.Text.Json.JsonSerializer.Serialize(new Dictionary<int, List<string>> {
        { 0, new List<string> {
            Url.Content("~/images/3DSchool1.png"),
            Url.Content("~/images/3DSchool3.png"),
            Url.Content("~/images/3DSchool4.png"),
            Url.Content("~/images/3DSchool2.png")
