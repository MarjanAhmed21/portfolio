        { 1, new List<string> {
            Url.Content("~/images/2DSchool2.png"),
            Url.Content("~/images/2DSchool3.png"),
            Url.Content("~/images/2DSchool1.png")
        }},
        { 2, new List<string> {
            Url.Content("~/images/SpawnShoot1.png"),
            Url.Content("~/images/SpawnShoot3.png"),
            Url.Content("~/images/SpawnShoot2.png")
        }},
        { 3, new List<string> {
            Url.Content("~/images/Webpage2.png"),
            Url.Content("~/images/Webpage3.png"),
            Url.Content("~/images/Webpage1.png")
        }}
    });
}


<script>
    const imageSets = @Html.Raw(imageSetsJson);

    const currentIndexes = {};

    function changeImage(button, direction) {
        const container = button.closest('.carousel-container');
        const img = container.querySelector('img');
        const projectIndex = [...document.querySelectorAll('.carousel-container')].indexOf(container);

        if (!currentIndexes[projectIndex]) currentIndexes[projectIndex] = 0;

        const images = imageSets[projectIndex];
        if (!images) return;

        currentIndexes[projectIndex] = (currentIndexes[projectIndex] + direction + images.length) % images.length;
        img.src = images[currentIndexes[projectIndex]];
    }

        function toggleExperience(button) {
        const card = button.closest('.project-card');
        const dropdown = card.querySelector('.experience-dropdown');
        const isVisible = dropdown.style.display === 'block';

        dropdown.style.display = isVisible ? 'none' : 'block';

        if (isVisible) {
            button.classList.remove('btn-warning');
            button.classList.add('btn-success');
            button.textContent = 'Experience Gained';
        } else {
            button.classList.remove('btn-success');
            button.classList.add('btn-warning');
            button.textContent = 'Hide Experience';
        }
    }
</script>



